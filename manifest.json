{
	"manifest_version": 3,
	"name": "ua changer",
	"version": "0.0.1",
	"description": "ua changer",
	"icons": {
		"32": "./images/icon.png"
	},
	"action": {
		"default_icon": {
			"32": "./images/icon.png"
		},
		"default_popup": "./popup.html"
	},
	"permissions": [
		"storage",
		"webRequest",
		"declarativeNetRequest",
		"declarativeNetRequestWithHostAccess",
		"declarativeNetRequestFeedback"
	],
	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./js/content_scripts.js"]
		}
	],
	"background": {
		"service_worker": "./js/background.js"
	}
}
